{
  "name": "git-hook-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx husky install",
    "postinstallUserDefined": "git config core.hooksPath hooks && echo \"hello\"",
    "postinstallMac": "git config core.hooksPath hooks && chmod 700 hooks/*",
    "uninstallHusky": "npm uninstall husky && git config --unset core.hooksPath",
    "lint": "eslint --ext .js src/",
    "test": "echo \"test\"",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}": [
      "echo \"script\"",
      "prettier --write",
      "eslint --fix",
      "git add -n"
    ],
    "src/*.{css,scss}": [
      "echo \"style\"",
      "prettier --write",
      "git add -n"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhaoyangkanshijie/gitHookExample.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.1",
    "prettier": "^2.4.1"
  }
}
